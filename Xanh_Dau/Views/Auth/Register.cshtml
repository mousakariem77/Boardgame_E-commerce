@model Models.Customer
@{
    ViewData["Title"] = "Register Page";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<link rel="stylesheet" href="~/css/site.css"/>
<link rel="stylesheet" href="~/tailwind/build/tailwind.css">
<link rel="stylesheet" href="~/fonts/boxicons.css"/>
<script src="~/js/site.js"></script>

<div class="bg-gradient-to-r from-green-200 to-blue-200 min-h-screen flex flex-col justify-center items-center">

    <!-- Section tiêu đề và lời chào -->
    <section class="text-dark py-6 w-full text-center">
        <h1 class="text-4xl font-extrabold text-green-700">Chào mừng bạn đến với Xanh Đấu!</h1>
        <p class="mt-4 text-lg text-gray-700">Hãy tạo tài khoản để trải nghiệm sản phẩm và tham gia vào cộng đồng bảo vệ
            môi trường của chúng tôi.</p>
    </section>

    <!-- Section form đăng ký tài khoản -->
    <section class="w-full max-w-lg bg-white p-8 rounded-lg shadow-lg mb-20">
        <!-- Form đăng ký -->
        <form method="POST" class="space-y-4">
            <!-- Tên đầy đủ -->
            <div>
                <label for="first-name" class="block text-gray-700 font-medium">Họ</label>
                <input type="text" id="first-name" asp-for="FirstName" placeholder="Nhập họ của bạn"
                       class="w-full mt-2 p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                       required/>
            </div>

            <div>
                <label for="last-name" class="block text-gray-700 font-medium">Tên</label>
                <input type="text" id="last-name" asp-for="LastName" placeholder="Nhập tên của bạn"
                       class="w-full mt-2 p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                       required/>
            </div>

            <!-- Email -->
            <div>
                <label for="email" class="block text-gray-700 font-medium">Email</label>
                <input type="email" id="email" asp-for="Email" placeholder="Nhập email của bạn"
                       class="w-full mt-2 p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                       required/>
            </div>

            <!-- Số điện thoại (tuỳ chọn) -->
            <div>
                <label for="phone" class="block text-gray-700 font-medium">Số điện thoại</label>
                <input type="text" id="phone" asp-for="PhoneNumber" placeholder="Nhập số điện thoại của bạn"
                       class="w-full mt-2 p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"/>
            </div>

            <!-- Tên đăng nhập -->
            <div>
                <label for="username" class="block text-gray-700 font-medium">Tên đăng nhập</label>
                <input type="text" id="username" asp-for="Username" placeholder="Nhập tên đăng nhập của bạn"
                       class="w-full mt-2 p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"/>
            </div>

            <!-- Mật khẩu -->
            <div>
                <label for="password" class="block text-gray-700 font-medium">
                    Mật khẩu mới
                </label>
                <div class="relative">
                    <input type="password" id="password" placeholder="Nhập mật khẩu mới" asp-for="Password"
                           class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                           required>
                    <button type="button" class="absolute right-3 top-4 text-gray-500"
                            onclick="togglePasswordVisibility('password', 'password-eye')">
                        <i id="password-eye" class="bx bx-hide"></i>
                    </button>
                </div>
                <div class="flex items-center space-x-4 mt-2">
                    <!-- Thanh độ mạnh của mật khẩu -->
                    <div id="password-strength" class="h-2 w-9/12 bg-gray-200 rounded-full">
                        <div class="h-full rounded-full" id="password-strength-bar"></div>
                    </div>
                    <!-- Trạng thái độ mạnh -->
                    <div id="password-strength-text" class="text-sm font-semibold"></div>
                </div>
            </div>

            <!-- Xác nhận mật khẩu -->
            <div>
                <label for="confirm-password" class="block text-gray-700 font-medium">Xác nhận mật khẩu</label>
                <div class="relative">
                    <input type="password" id="confirm-password" name="confirm-password" placeholder="Nhập lại mật khẩu"
                           class="w-full mt-2 p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"
                           required/>
                    <button type="button" class="absolute right-3 top-3 text-gray-500"
                            onclick="togglePasswordVisibility('confirm-password', 'confirm-password-eye')">
                        <i id="confirm-password-eye" class="bx bx-hide mt-3"></i>
                    </button>
                </div>
            </div>

            <!-- Ngày sinh -->
            <div>
                <label for="dob" class="block text-gray-700 font-medium">Ngày sinh</label>
                <input type="date" id="dob" asp-for="Dob"
                       class="w-full mt-2 p-3 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500"/>
            </div>

            <!-- Giới tính -->
            <div>
                <label class="block text-gray-700 font-medium">Giới tính</label>
                <div class="flex items-center space-x-4">
                    <label class="flex items-center">
                        <input type="radio" asp-for="Gender" value="Male" class="mr-2"/>
                        Nam
                    </label>
                    <label class="flex items-center">
                        <input type="radio" asp-for="Gender" value="Female" class="mr-2"/>
                        Nữ
                    </label>
                    <label class="flex items-center">
                        <input type="radio" asp-for="Gender" value="Other" class="mr-2"/>
                        Khác
                    </label>
                </div>
            </div>

            <!-- Điều khoản và chính sách -->
            <div>
                <label for="terms" class="items-center">
                    <input type="checkbox" id="terms" name="terms" class="mr-2" required/>
                    Tôi đã đọc và đồng ý với <a href="/dieu-khoan" class="text-green-500 hover:underline">Điều khoản sử
                        dụng</a> và <a href="/chinh-sach" class="text-green-500 hover:underline">Chính sách bảo mật</a>.
                </label>
            </div>

            <!-- Nút đăng ký -->
            <div>
                <button type="submit"
                        class="w-full bg-green-700 text-white py-3 rounded-md font-semibold hover:bg-green-800 focus:outline-none focus:ring-2 focus:ring-green-500">
                    Đăng ký ngay
                </button>
            </div>

            <!-- Thông báo xác nhận email -->
            <div id="registration-confirmation" class="hidden mt-4 text-sm text-green-600">
                <p>Cảm ơn bạn đã đăng ký! Vui lòng kiểm tra hộp thư đến của bạn và làm theo hướng dẫn để xác nhận tài
                    khoản.</p>
            </div>

            <!-- Thông báo lỗi đăng ký -->
            <div id="registration-error" class="hidden mt-4 text-red-600 text-sm">
                <p>Email này đã được sử dụng, vui lòng thử một email khác.</p>
            </div>

            <!-- Liên kết đến trang đăng nhập -->
            <div class="mt-6 text-center">
                <p class="text-gray-600">Bạn đã có tài khoản? <a asp-controller="Auth" asp-action="Login"
                                                                 class="text-green-500 hover:underline">Đăng nhập
                        ngay!</a></p>
            </div>
        </form>
    </section>
</div>

<!-- Modal đăng ký thành công -->
<div id="success-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden z-50">
    <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-6">
        <!-- Tiêu đề Modal -->
        <div class="text-center mb-6">
            <h2 class="text-3xl font-extrabold text-green-700">Đăng ký thành công!</h2>
            <p class="text-gray-600 mt-2">Chào mừng bạn đã gia nhập cộng đồng Xanh Đấu!</p>
        </div>

        <!-- Icon minh họa thành công -->
        <div class="flex justify-center mb-6">
            <div
                class="w-24 h-24 flex items-center justify-center rounded-full bg-gradient-to-br from-green-300 to-green-500 shadow-lg transform scale-110 hover:scale-125 transition-transform duration-300 ease-out">
                <svg xmlns="http://www.w3.org/2000/svg" width="60" height="60" viewBox="0 0 24 24" class="text-white">
                    <defs>
                        <linearGradient id="success-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                            <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1"/>
                            <stop offset="100%" style="stop-color:#f5f5f5;stop-opacity:0.8"/>
                        </linearGradient>
                    </defs>
                    <path fill="url(#success-gradient)"
                          d="M12 2C6.486 2 2 6.486 2 12s4.486 10 10 10 10-4.486 10-10S17.514 2 12 2zm-2 15.414-4-4L7.707 12l2.293 2.293 6.293-6.293 1.414 1.414-7.707 7.707z"></path>
                </svg>
            </div>
        </div>

        <!-- Thông báo -->
        <div class="mb-6 text-center">
            <p class="text-gray-700">
                Bạn đã tạo tài khoản thành công. Hãy bắt đầu hành trình bảo vệ môi trường cùng chúng tôi.
            </p>
        </div>

        <!-- Nút hành động -->
        <div class="flex justify-center">
            <a asp-controller="Auth" asp-action="Login"
               class="bg-green-700 text-white py-2 px-6 rounded-lg font-semibold hover:bg-green-800 focus:outline-none">
                Đóng
            </a>
        </div>
    </div>
</div>

@if (TempData["RegistrationSuccess"] != null && (bool)TempData["RegistrationSuccess"])
{
    <script>
        window.onload = function () {
            openSuccessModal();
        };
    </script>
}

<!-- Đoạn mã JavaScript để ẩn/hiện mật khẩu -->
<script>
    // Kiểm tra độ mạnh của mật khẩu
    const newPasswordInput = document.getElementById('password');
    const newPasswordStrengthBar = document.getElementById('password-strength-bar');
    const newPasswordStrengthText = document.getElementById('password-strength-text');

    newPasswordInput.addEventListener('input', () => {
        const password = newPasswordInput.value;
        let strength = 0;
        let strengthMessage = '';

        // Kiểm tra độ dài mật khẩu
        if (password.length < 4) {
            strength = 1;
            strengthMessage = 'Yếu';
        } else if (password.length >= 12) {
            strength = 3;
            strengthMessage = 'Mạnh';
        } else {
            strength = 2;
            strengthMessage = 'Trung bình';
        }

        const strengthPercent = (strength / 3) * 100;

        // Cập nhật thanh độ mạnh
        if (strength === 1) {
            newPasswordStrengthBar.style.width = '33%';
            newPasswordStrengthBar.style.backgroundColor = 'red'; // Màu đỏ cho mật khẩu yếu
        } else if (strength === 2) {
            newPasswordStrengthBar.style.width = '66%';
            newPasswordStrengthBar.style.backgroundColor = 'yellow'; // Màu vàng cho mật khẩu trung bình
        } else {
            newPasswordStrengthBar.style.width = '100%';
            newPasswordStrengthBar.style.backgroundColor = 'green'; // Màu xanh cho mật khẩu mạnh
        }

        // Cập nhật văn bản hiển thị độ mạnh mật khẩu
        newPasswordStrengthText.textContent = strengthMessage;
        newPasswordStrengthText.style.color = strength === 1 ? 'red' : (strength === 2 ? 'yellow' : 'green');
    });

    function togglePasswordVisibility(fieldId, iconId) {
        const passwordField = document.getElementById(fieldId);
        const passwordEyeIcon = document.getElementById(iconId);
        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            passwordEyeIcon.classList.remove('bx-show-alt');
            passwordEyeIcon.classList.add('bx-hide');
        } else {
            passwordField.type = 'password';
            passwordEyeIcon.classList.remove('bx-hide');
            passwordEyeIcon.classList.add('bx-show-alt');
        }
    }

    // Hàm mở modal
    function openSuccessModal() {
        const modal = document.getElementById('success-modal');
        modal.classList.remove('hidden');
    }

    // Hàm đóng modal
    function closeModal() {
        const modal = document.getElementById('success-modal');
        modal.classList.add('hidden');
    }

</script>
