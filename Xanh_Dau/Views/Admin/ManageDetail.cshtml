@model Xanh_Dau.DTO.AdminDTO
@{
    ViewData["Title"] = "Admin Detail Page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/css/site.css"/>
<link rel="stylesheet" href="~/tailwind/build/tailwind.css">
<link rel="stylesheet" href="~/fonts/boxicons.css"/>
<script src="~/js/site.js"></script>

<div class="admin-detail min-h-screen bg-gray-50 py-6 px-6">
    <div class="admin-detail-container max-w-5xl mx-auto bg-white shadow-md rounded-lg p-6 pt-1">
        <h3 class="text-xl font-semibold text-gray-800 mb-3">Chi tiết quản trị viên</h3>
        
        <!-- Header -->
        <div class="flex flex-wrap md:flex-nowrap md:space-x-6 mb-6">
            <!-- Profile Picture -->
            <div class="relative w-40 h-40 rounded-full overflow-hidden shadow-md bg-gray-200">
                <img src="/img/avatar.jpg" alt="Admin Avatar" class="object-cover w-full h-full">
            </div>
            
            <!-- Admin Details -->
            <div class="w-full md:w-2/3">
                <h1 class="text-2xl font-bold text-gray-800 mb-2">@Model.Admin.FirstName @Model.Admin.LastName</h1>
                <p class="text-gray-600 text-sm mb-4">Mã Admin: @Model.Admin.AdminId</p>
                <p class="text-gray-700 text-lg font-semibold mb-2">Username: <span class="text-blue-600">@Model.Admin.Username</span></p>
                <p class="text-gray-700 text-lg font-semibold mb-4">Email: <span class="text-blue-600">@Model.Admin.Email</span></p>
                <p class="text-gray-700 mb-2"><span class="font-semibold">Vai trò:</span> @Model.Admin.Role</p>
                <p class="text-gray-700 mb-6"><span class="font-semibold">Trạng thái:</span> <span class="text-green-600">@Model.Admin.Status</span></p>
                
                <div class="mt-4">
                    <h2 class="text-xl font-semibold text-gray-800 mb-4">Thông tin chi tiết</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <p class="text-gray-600"><span class="font-semibold">Thời gian tạo:</span> @Model.Admin.CreatedAt</p>
                        </div>
                        <div>
                            <p class="text-gray-600"><span class="font-semibold">Thời gian cập nhật:</span> @Model.Admin.UpdatedAt</p>
                        </div>
                        <div>
                            <p class="text-gray-600"><span class="font-semibold">Lần đăng nhập cuối:</span> @Model.Admin.LastLogin</p>
                        </div>
                        <div>
                            <p class="text-gray-600"><span class="font-semibold">Đổi mật khẩu gần nhất:</span> @Model.Admin.LastPasswordChange</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
